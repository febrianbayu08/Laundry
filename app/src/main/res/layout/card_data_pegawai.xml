<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"
    android:background="@drawable/roundedbg"
    android:layout_marginEnd="30dp"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCARD_PELANGGAN_ID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/sunday"
            android:text="@string/pegawai"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvCARD_PELANGGAN_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/namapeg"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvCARD_PELANGGAN_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alamat"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvCARD_PELANGGAN_nohp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nohp"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvCARD_PELANGGAN_terdaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terda"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <!-- Tombol Aksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_hubungi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#22D10B"
                    android:text="@string/hub"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_lihat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lihat"
                    android:backgroundTint="@color/purplePrimary"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>